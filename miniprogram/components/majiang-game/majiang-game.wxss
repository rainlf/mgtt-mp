/* 抽屉样式 */
.drawer-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
}

.drawer-container2 {
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    padding: 32rpx;
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.mask {
    background: rgba(0, 0, 0, 0.5);
    position: absolute;
    width: 100%;
    height: 100%;
}

.drawer-content {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 90vh;
    background: #fff;
    border-radius: 24rpx 24rpx 0 0;
    box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
}

.drawer-content-top {
    display: flex;
    justify-content: start;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.drawer-content-bottom {
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    align-items: center;
    gap: 32rpx;
    margin: 48rpx 0;
    width: 100%;
}

.btn {
    flex: 1;
    text-align: center;
    padding: 24rpx;
    border-radius: 12rpx;
    font-weight: 500;
}

.confirm {
    background: #2196f3;
    color: white;
    margin: 20rpx 20rpx 20rpx 10rpx
}

.cancel {
    background: #f5f5f5;
    color: #666;
    margin: 20rpx 10rpx 20rpx 20rpx
}

/* 新增样式 */
.win-type-selector {
    padding: 22rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: start;
    border-bottom: 2rpx solid #f5f5f5;
}

.selector-label {
    font-weight: bold;
    font-size: 30rpx;
    color: coral;
    margin: 20rpx 10rpx 20rpx 20rpx;
}

.type-buttons {
    display: flex;
    gap: 20rpx;
}

.type-btn {
    padding: 12rpx 32rpx;
    border-radius: 8rpx;
    background: #f5f5f5;
    color: #666;
    font-size: 28rpx;
    transition: all 0.3s;
    margin-right: 20rpx;
}

.type-btn.active {
    background: #2196F3;
    color: white;
    box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

/* 保持原有按钮交互 */
.btn:active,
.type-btn:active {
    opacity: 0.8;
    transform: scale(0.98);
}

/* 新增样式 */
/* 第一部分样式 */
.section-header {
    display: flex;
    justify-content: start;
    align-items: center;
    padding: 0 32rpx;
    margin-top: 20rpx;
    width: 100%;
}

.section-title {
    font-size: 25rpx;
    color: #333;
    font-weight: 500;
    margin-left: 20rpx;
}

.replace-btn {
    font-size: 25rpx;
    color: #2196F3;
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
    margin-left: 10rpx;
}

.replace-btn:active {
    background: #e3f2fd;
}

/* 第二部分：玩家列表 */
.players-grid {
    width: 90%;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    align-content: flex-start; /* 顶部对齐防止顶部留白 */
    padding: 20rpx 0;
    gap: 20rpx; /* 替代justify-content: space-between */
}

.player-card {
    text-align: center;
    padding: 20rpx;
    border-radius: 16rpx;
    background: #f8f9fa;
    transition: all 0.2s;
    margin: 5rpx;
}

.all-players-grid {
    /*width: 100%;*/
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    padding: 20rpx 0;
    /*align-content: flex-start;*/
}

.all-player-card {
    text-align: center;
    padding: 20rpx;
    border-radius: 16rpx;
    background: #f8f9fa;
    transition: all 0.2s;
    margin: 5rpx;
}

.all-player-card.active {
    background: #e3f2fd;
    color: white;
    box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.player-card.active {
    background: #e3f2fd;
    box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.15);
}

.player-avatar {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    display: block;
    margin: 0 auto 12rpx;
}

.player-name {
    font-size: 26rpx;
    color: #666;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 第三部分：详情框 */
.detail-box {
    position: relative;
    margin: 40rpx 32rpx;
    padding: 32rpx;
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.arrow {
    position: absolute;
    top: -16rpx;
    left: 50%;
    width: 24rpx;
    height: 24rpx;
    background: #fff;
    transform: translateX(-50%) rotate(45deg);
    box-shadow: -2rpx -2rpx 4rpx rgba(0, 0, 0, 0.06);
}

.detail-content {
    position: relative;
    z-index: 1;
}

.detail-title {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 24rpx;
    display: block;
}

.score-input {
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.score-input input {
    flex: 1;
    margin-left: 20rpx;
    padding: 12rpx;
    border-bottom: 2rpx solid #eee;
}

.scroll-view-container {
    height: 900rpx;
    display: flex;
    align-items: center;
    justify-content: center; /* 新增属性，使元素水平居中 */
}