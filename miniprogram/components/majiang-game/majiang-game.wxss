/* 抽屉样式 */
.drawer-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
}
.drawer-container2 {
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    padding: 32rpx;
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}



.mask {
    background: rgba(0,0,0,0.5);
    position: absolute;
    width: 100%;
    height: 100%;
}

.drawer-content {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 90vh;
    background: #fff;
    border-radius: 24rpx 24rpx 0 0;
    box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.1);
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
}

/* 底部按钮 */
.action-buttons {
    display: flex;
    gap: 32rpx;
    margin: 48rpx 0;
    width: 100%;
}

.btn {
    flex: 1;
    text-align: center;
    padding: 24rpx;
    border-radius: 12rpx;
    font-weight: 500;
}

.confirm {
    background: #2196f3;
    color: white;
    margin: 20rpx 20rpx 20rpx 10rpx
}

.cancel {
    background: #f5f5f5;
    color: #666;
    margin: 20rpx 10rpx 20rpx 20rpx
}

/* 新增样式 */
.win-type-selector {
    padding: 32rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: start;
    border-bottom: 2rpx solid #f5f5f5;
}

.selector-label {
    font-weight: bold;
    font-size: 30rpx;
    color: coral;
    margin: 20rpx 10rpx 20rpx 20rpx;
}

.type-buttons {
    display: flex;
    gap: 20rpx;
}

.type-btn {
    padding: 12rpx 32rpx;
    border-radius: 8rpx;
    background: #f5f5f5;
    color: #666;
    font-size: 28rpx;
    transition: all 0.3s;
    margin-right: 20rpx;
}

.type-btn.active {
    background: #2196F3;
    color: white;
    box-shadow: 0 4rpx 12rpx rgba(33,150,243,0.3);
}

/* 保持原有按钮交互 */
.btn:active,
.type-btn:active {
    opacity: 0.8;
    transform: scale(0.98);
}