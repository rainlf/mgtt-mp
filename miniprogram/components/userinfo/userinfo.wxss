/* 用户信息组件样式 */
.userinfo-container {
    display: flex;
    align-items: center;
    padding: 32rpx;
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
    margin: 20rpx 20rpx 10rpx 20rpx;
}

.avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    margin-right: 32rpx;
    border: 4rpx solid #f5f5f5;
}

.info-right {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.username {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 16rpx;
}

.points-box {
    display: flex;
    align-items: center;
    background: #fff7e6;
    padding: 8rpx 24rpx;
    border-radius: 40rpx;
}

.points-label {
    font-size: 26rpx;
    color: #666;
}

.points {
    font-size: 32rpx;
    color: #ff9900;
    font-weight: bold;
    margin-left: 12rpx;
}

/* components/userinfo/userinfo.wxss */
.settings-btn {
    position: absolute;
    right: 10rpx;
    top: 50%;
    transform: translateY(-50%);
    padding: 16rpx;
    opacity: 0.8;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 50px;
    height: 100%;
}

.gear-icon {
    width: 48rpx;
    height: 48rpx;
    transition: transform 0.3s ease;
}

.settings-btn:active .gear-icon {
    transform: rotate(30deg);
    opacity: 1;
}