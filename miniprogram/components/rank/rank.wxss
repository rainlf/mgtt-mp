.list-container {
    height: calc(100vh - 600rpx); /* 根据userinfo高度调整 */
    display: flex;
    align-items: center;
    padding: 5rpx;
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
    margin: 10rpx 20rpx 20rpx 20rpx;
    width: auto;
}

@keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

/* 加载动画 */
.dot-flashing {
    position: relative;
    width: 10rpx;
    height: 10rpx;
    border-radius: 5rpx;
    background-color: #4a90e2;
    color: #4a90e2;
    animation: dotFlashing 1s infinite linear;
}

.dot-flashing::before, .dot-flashing::after {
    content: '';
    display: inline-block;
    position: absolute;
    top: 0;
}

.dot-flashing::before {
    left: -15rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 5rpx;
    background-color: #4a90e2;
    color: #4a90e2;
    animation: dotFlashing 1s infinite linear;
    animation-delay: 0s;
}

.dot-flashing::after {
    left: 15rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 5rpx;
    background-color: #4a90e2;
    color: #4a90e2;
    animation: dotFlashing 1s infinite linear;
    animation-delay: 0.5s;
}

@keyframes dotFlashing {
    0% { background-color: #4a90e2; }
    50%, 100% { background-color: rgba(74,144,226,0.2); }
}
/* 列表项容器 */
.list-item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    margin: 10rpx;
    background: #fff;
    border-radius: 22rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}

.user-info-box {
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center;
    margin-bottom: 10rpx;
}

/* 排名样式 */
.rank-king-box {
    min-width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
}

.rank-box {
    min-width: 80rpx;
    height: 80rpx;
    background: #ffd700;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
}

.rank-king {
    width: 100%;
    height: 100%;
    padding: 15%;  /* 可视情况调整留白 */
    object-fit: contain;
}

.rank-text {
    color: #fff;
    font-size: 34rpx;
    font-weight: 700;
    text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.15);
}

/* 头像样式 */
.avatar {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    margin-right: 24rpx;
    border: 4rpx solid #f5f5f5;
}

/* 信息区 */
.info-box {
    flex: 1;
    margin-right: 20rpx;
}

.nickname {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 8rpx;
}

.tags-box {
    display: flex;
    flex-wrap: wrap;
    gap: 10rpx;
}

.tag {
    background: #e8f3ff;
    color: #3a7afe;
    font-size: 24rpx;
    padding: 6rpx 20rpx;
    border-radius: 40rpx;
    line-height: 1.4;
    margin: 2rpx;
}

/* 得分样式 */
.score-box {
    text-align: right;
    min-width: 100rpx;
}

.score-text {
    display: block;
    font-size: 38rpx;
    font-weight: 700;
    color: #ff9900;
    line-height: 1.2;
}

.score-text2 {
    display: block;
    font-size: 38rpx;
    font-weight: 700;
    color: #00c16e;
    line-height: 1.2;
}


.score-label {
    display: block;
    font-size: 24rpx;
    color: #999;
    margin-top: 6rpx;
}