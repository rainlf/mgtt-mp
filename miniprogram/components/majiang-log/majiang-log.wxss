.list-container {
    height: calc(100vh - 600rpx); /* 根据userinfo高度调整 */
    display: flex;
    align-items: center;
    padding: 5rpx;
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
    margin: 10rpx 20rpx 20rpx 20rpx;
    width: auto;
}


/* 记录项容器 */
.record-item {
    background: #fff;
    border-radius: 12rpx;
    margin: 20rpx;
    padding: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 头部信息 */
.record-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
    padding-bottom: 16rpx;
    border-bottom: 2rpx solid #eee;
}

.record-header-left {
    display: flex;
    justify-content: start;
    align-items: center;
}

.record-header-right {
    display: flex;
    justify-content: end;
    align-items: center;
}

.win-type {
    font-size: 32rpx;
    font-weight: 700;
    color: #00b894;
}

.win-type2 {
    font-size: 32rpx;
    font-weight: 700;
    color: orangered;
}

.game-time {
    font-size: 24rpx;
    color: #666;
}

/* 玩家行 */
.player-row {
    display: flex;
    align-items: center;
    padding: 16rpx 0;
}

.avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.player-info {
    flex: 1;
    margin-right: 20rpx;
}

.nickname {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 8rpx;
}

.tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8rpx;
}

.tag {
    font-size: 22rpx;
    padding: 4rpx 16rpx;
    border-radius: 32rpx;
    margin-right: 10rpx;
}

.win-tag {
    background: #d0f0d7;
    color: #00b894;
}

.lose-tag {
    background: #ffe5e5;
    color: #ff7675;
}

.score-change {
    font-size: 32rpx;
    font-weight: 700;
    min-width: 120rpx;
    text-align: right;
    color: #ff9900;
}

.score-change2 {
    font-size: 32rpx;
    font-weight: 700;
    min-width: 120rpx;
    text-align: right;
    color: #00c16e;
}


/* 记账信息 */
.bookkeeping-info {
    margin-top: 16rpx;
    padding-top: 16rpx;
    border-top: 1rpx solid #eee;
    font-size: 24rpx;
    color: #999;
    display: flex;
    justify-content: space-between;
}

.player-avatars {
    display: flex;
    margin-left: 20rpx;
    align-items: center;
}

.avatar-small {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    border: 2rpx solid #fff;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
    margin-left: -12rpx;
    transition: transform 0.2s;
    margin-right: 10rpx;
}

/* 调整删除按钮样式 */
.delete-btn {
    width: 36rpx;
    height: 36rpx;
    margin-left: 5rpx;
    opacity: 0.7;
    transition: all 0.2s;
    display: flex;
    justify-content: center;
    align-items: center;
}

.delete-btn:active {
    transform: scale(1.2);
    opacity: 1;
}