<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list"
             refresher-enabled
             bindrefresherrefresh="onRefresh"
             refresher-triggered="{{isRefreshing}}"
>
    <view class="container">
        <view class="top-container">
            <!-- userinfo 组件 -->
            <userinfo class="user-info" username="{{user.username}}"
                      points="{{user.points}}"
                      avatar="{{user.avatar}}"
            />

            <rank class="rank"
                  listData="{{rankList}}"
                  bind:load="handleComponentLoad"
            />
        </view>
        <view class="bottom-container">
            <button class="history-btn">对局记录</button>
            <button class="start-btn">开始记录</button>
        </view>
    </view>
</scroll-view>
