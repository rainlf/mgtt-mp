page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-image: url('/images/background7.png');
    background-size: cover; /* 让背景图覆盖整个容器 */
    background-position: center; /* 背景图居中显示 */
    background-repeat: no-repeat; /* 背景图不重复 */
}

.scrollarea {
    flex: 1;
    overflow-y: hidden;
}

/* 新增背景样式 */
.container {
    padding: 75px 0 0 0;
}

.top-container {
    flex: 1;
    width: 100%;
    overflow: hidden; /* 防止内容溢出 */
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.bottom-container {
    padding-bottom: 60rpx;
    width: 100%;
    box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
    display: flex;
}

.user-info {

}

.rank {
    flex: 1
}

.start-btn {
    background: linear-gradient(135deg, #ffd700 0%, #ffb600 100%);
    box-shadow: 0 6rpx 18rpx rgba(255, 215, 0, 0.3);
    color: #fff;
    border-radius: 48rpx;
    font-size: 32rpx;
    font-weight: bold;
    transition: all 0.3s ease;
    border: none;
}

.history-btn {
    background: linear-gradient(135deg, #4A90E2 0%, #0066CC 100%);
    box-shadow: 0 6rpx 18rpx rgba(74, 144, 226, 0.3);
    color: #fff;
    border-radius: 48rpx;
    font-size: 32rpx;
    font-weight: bold;
    transition: all 0.3s ease;
    border: none;
}



