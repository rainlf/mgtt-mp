page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-image: url('/images/background2.jpg');
    background-size: cover; /* 让背景图覆盖整个容器 */
    background-position: center; /* 背景图居中显示 */
    background-repeat: no-repeat; /* 背景图不重复 */
}

.scrollarea {
    flex: 1;
    overflow-y: hidden;
}